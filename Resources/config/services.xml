<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sp_bower.bower.class">Sp\BowerBundle\Bower\Bower</parameter>
        <parameter key="sp_bower.bower.manager.class">Sp\BowerBundle\Bower\BowerManager</parameter>
        <parameter key="sp_bower.bower.bin">/usr/bin/bower</parameter>
    </parameters>

    <services>
        <service id="sp_bower.bower" class="%sp_bower.bower.class%">
            <argument>%sp_bower.bower.bin%</argument>
        </service>

        <service id="sp_bower.bower.manager" class="%sp_bower.bower.manager.class%">
            <argument>%sp_bower.bower.bin%</argument>
        </service>
    </services>
</container>
